<Page x:Class="ClassRoomWPF_DB_TP.Pages.TeachersStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassRoomWPF_DB_TP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeachersStudentPage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="StudentName" Text="Оценки ученика {Имя ученика}" FontSize="18" Margin="0,0,0,10"/>
            <ListView x:Name="GradesList" Height="200"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Добавить" Click="ToNewMark" Margin="0,0,10,0"/>
                <Button Content="Обновить" Click="ToUpdateMark" Margin="0,0,10,0"/>
                <Button Content="Удалить" Click="DeleteMark"/>
            </StackPanel>
            <Button Content="Средняя оценка" Click="ShowAverage" Margin="0,10,0,0"/>
            <Button Content="Назад" Click="GoBack" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
