<Window x:Class="ClassRoomWPF_DB_TP.Pages.NewTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassRoomWPF_DB_TP.Pages"
        mc:Ignorable="d"
        Title="Новый учитель" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ФИО" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameBox" Margin="0,0,0,5"/>
            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginBox" Margin="0,0,0,5"/>
            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,5"/>
            <TextBlock Text="Предмет" Margin="0,0,0,5"/>
            <TextBox x:Name="SubjectBox" Margin="0,0,0,10"/>
            <Button Content="Создать" Click="CreateTeacher" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
